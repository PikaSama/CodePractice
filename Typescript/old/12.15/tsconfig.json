{
    "compilerOptions": {
        "incremental": true,
        "module": "CommonJS",
        "tsBuildInfoFile": "./out/buildFile.tsbuildinfo",
        "target": "ES6",
        "outDir": "./out",
        "moduleResolution": "Node",
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": false,
        "listEmittedFiles": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["./node_modules"]
}
